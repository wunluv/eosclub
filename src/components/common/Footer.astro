---
import LangSwitch from './LangSwitch.astro';
import BsportLeadCapture from '../integrations/BsportLeadCapture.astro';

interface Props {
  deSlug?: string;
  enSlug?: string;
}

const { deSlug = '', enSlug = '' } = Astro.props;

const currentLocale = Astro.currentLocale || 'de';
const isEn = currentLocale === 'en';
const currentYear = new Date().getFullYear();

// The translation target is the slug of the OTHER language
const translationSlug = isEn ? deSlug : enSlug;

const legalLinks = [
  { de: 'Impressum', en: 'Imprint', path: '/impressum', enPath: '/en/imprint' },
  { de: 'Datenschutz', en: 'Privacy', path: '/datenschutz', enPath: '/en/privacy' },
  { de: 'AGB', en: 'Terms', path: '/agb', enPath: '/en/terms' },
];

const menuLinks = [
  { de: 'Home',     en: 'Home',    dePath: '/',        enPath: '/en' },
  { de: 'Studio',   en: 'Studio',  dePath: '/studio',  enPath: '/en/studio' },
  { de: 'Kurse',    en: 'Classes', dePath: '/kurse',   enPath: '/en/classes' },
  { de: 'Preise',   en: 'Pricing', dePath: '/preise',  enPath: '/en/pricing' },
  { de: 'Events',   en: 'Events',  dePath: '/events',  enPath: '/en/events' },
  { de: 'Wellness', en: 'Wellness',dePath: '/wellness',enPath: '/en/wellness' },
  { de: 'Team',     en: 'Team',    dePath: '/team',    enPath: '/en/team' },
];

const pathname = new URL(Astro.request.url).pathname;

const socialLinks = [
  {
    name: 'Instagram',
    url: 'https://instagram.com/eosclub',
    icon: `<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>`
  }
];
---

<footer class="bg-eos-contrast text-white py-12 mt-auto">
  <div class="max-w-7xl mx-auto w-full px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-12 text-center md:text-left">
      <!-- Studio Info -->
      <div class="flex flex-col items-center md:items-start">
        <h2 class="font-serif text-2xl mb-4 !text-white">EOS CLUB</h2>
        <a
          href="https://www.google.com/maps/place/Eupener+Str.+84,+50933+K%C3%B6ln,+Germany/@50.9411759,6.8896516,643m/data=!3m2!1e3!4b1!4m6!3m5!1s0x47bf3ad312f5703d:0x339706fc3e0e6e4!8m2!3d50.9411759!4d6.8896516!16s%2Fg%2F11cpjsmm8h?entry=ttu&g_ep=EgoyMDI2MDIxOC4wIKXMDSoASAFQAw%3D%3D"
          target="_blank"
          rel="noopener noreferrer"
          class="group block text-white/60 hover:text-eos-accent transition-colors"
        >
          <div class="flex items-start justify-center md:justify-start gap-2">
            <svg class="w-5 h-5 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <div class="text-sm md:text-base">
              <p>Eupener Str. 84</p>
              <p>50933 Köln</p>
            </div>
          </div>
        </a>

        <div class="mt-6 text-white/60">
          <a href="tel:+491726955550" class="flex items-center justify-center md:justify-start gap-2 hover:text-eos-accent transition-colors">
            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <span class="text-sm md:text-base">+49 172 6955550</span>
          </a>
        </div>
      </div>

      <!-- Menu Links -->
      <nav class="flex flex-col space-y-3 md:space-y-2">
        <h3 class="font-medium mb-2 !text-white">{isEn ? 'Menu' : 'Menü'}</h3>
        {menuLinks.map((link) => {
          const path = isEn ? link.enPath : link.dePath;
          const isActive = path === '/' || path === '/en'
            ? pathname === path
            : pathname === path || pathname.startsWith(path + '/');
          return (
            <a
              href={path}
              class={`text-xs md:text-[10px] font-bold uppercase tracking-widest transition-colors py-1 md:py-0 ${isActive ? 'text-eos-accent' : 'text-white/40 hover:text-eos-accent'}`}
            >
              {isEn ? link.en : link.de}
            </a>
          );
        })}
      </nav>

      <!-- Social Links -->
      <nav class="flex flex-col space-y-3 md:space-y-2">
        <h3 class="font-medium mb-2 !text-white">Social</h3>
        {socialLinks.map((link) => (
          <a
            href={link.url}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center justify-center md:justify-start gap-3 text-xs md:text-[10px] font-bold uppercase tracking-widest text-white/40 hover:text-eos-accent transition-colors group py-1 md:py-0"
          >
            <span class="text-white/40 group-hover:text-eos-accent transition-colors" set:html={link.icon} />
            {link.name}
          </a>
        ))}
      </nav>

      <!-- Legal Links -->
      <nav class="flex flex-col space-y-3 md:space-y-2">
        <h3 class="font-medium mb-2 !text-white">{isEn ? 'Legal' : 'Rechtliches'}</h3>
        {legalLinks.map((link) => {
          const path = isEn ? link.enPath : link.path;
          const isActive = pathname === path;
          return (
            <a
              href={path}
              class={`text-xs md:text-[10px] font-bold uppercase tracking-widest transition-colors py-1 md:py-0 ${isActive ? 'text-eos-accent' : 'text-white/40 hover:text-eos-accent'}`}
            >
              {isEn ? link.en : link.de}
            </a>
          );
        })}
      </nav>

      <!-- Language & Copyright -->
      <div class="flex flex-col items-center md:items-start lg:items-end justify-between gap-8 lg:gap-0">
        <div class="w-full max-w-xs mb-6">
          <BsportLeadCapture fieldsType="firstNameAndEmail" />
        </div>
        <LangSwitch translationSlug={translationSlug} />
        <p class="text-sm text-white/60 mt-8 lg:mt-0">
          © {currentYear} EOS CLUB. {isEn ? 'All rights reserved.' : 'Alle Rechte vorbehalten.'}
        </p>
      </div>
    </div>
  </div>
</footer>
