---
import LangSwitch from './LangSwitch.astro';
import BsportLeadCapture from '../integrations/BsportLeadCapture.astro';

interface Props {
  deSlug?: string;
  enSlug?: string;
}

const { deSlug = '', enSlug = '' } = Astro.props;

const currentLocale = Astro.currentLocale || 'de';
const isEn = currentLocale === 'en';
const currentYear = new Date().getFullYear();

const translationSlug = isEn ? deSlug : enSlug;

const legalLinks = [
  { de: 'Impressum', en: 'Imprint',  path: '/impressum',   enPath: '/en/imprint' },
  { de: 'Datenschutz', en: 'Privacy', path: '/datenschutz', enPath: '/en/privacy' },
  { de: 'AGB', en: 'Terms',          path: '/agb',          enPath: '/en/terms' },
];

const menuLinks = [
  { de: 'Home',     en: 'Home',    dePath: '/',         enPath: '/en' },
  { de: 'Studio',   en: 'Studio',  dePath: '/studio',   enPath: '/en/studio' },
  { de: 'Kurse',    en: 'Classes', dePath: '/kurse',    enPath: '/en/classes' },
  { de: 'Preise',   en: 'Pricing', dePath: '/preise',   enPath: '/en/pricing' },
  { de: 'Events',   en: 'Events',  dePath: '/events',   enPath: '/en/events' },
  { de: 'Wellness', en: 'Wellness',dePath: '/wellness', enPath: '/en/wellness' },
  { de: 'Team',     en: 'Team',    dePath: '/team',     enPath: '/en/team' },
];

const socialLinks = [
  {
    name: 'Instagram',
    url: 'https://instagram.com/eosclub',
    icon: `<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>`
  },
  {
    name: 'E-Mail',
    url: 'mailto:info@eos.club',
    icon: `<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M20 4H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/></svg>`
  },
  {
    name: 'Maps',
    url: 'https://www.google.com/maps/place/Eupener+Str.+84,+50933+K%C3%B6ln',
    icon: `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/></svg>`
  },
];

const pathname = new URL(Astro.request.url).pathname;
---

<footer class="bg-eos-zen text-white mt-auto">

  <!-- ── Main body ── -->
  <div class="max-w-7xl mx-auto w-full px-6 pt-12 pb-0">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-20">

      <!-- LEFT: nav columns -->
      <div class="grid grid-cols-2 sm:grid-cols-3 gap-8">

        <!-- Menu -->
        <nav>
          <h3 class="text-[10px] font-bold uppercase tracking-widest text-white/40 mb-4">
            {isEn ? 'Menu' : 'Menü'}
          </h3>
          <ul class="space-y-2.5">
            {menuLinks.map((link) => {
              const path = isEn ? link.enPath : link.dePath;
              const isActive = path === '/' || path === '/en'
                ? pathname === path
                : pathname === path || pathname.startsWith(path + '/');
              return (
                <li>
                  <a
                    href={path}
                    class={`text-[11px] font-bold uppercase tracking-widest transition-colors ${isActive ? 'text-eos-accent' : 'text-white/60 hover:text-white'}`}
                  >
                    {isEn ? link.en : link.de}
                  </a>
                </li>
              );
            })}
          </ul>
        </nav>

        <!-- Social / Links -->
        <nav>
          <h3 class="text-[10px] font-bold uppercase tracking-widest text-white/40 mb-4">Links</h3>
          <ul class="space-y-2.5">
            {socialLinks.map((link) => (
              <li>
                <a
                  href={link.url}
                  target={link.url.startsWith('http') ? '_blank' : undefined}
                  rel={link.url.startsWith('http') ? 'noopener noreferrer' : undefined}
                  class="text-[11px] font-bold uppercase tracking-widest text-white/60 hover:text-white transition-colors"
                >
                  {link.name}
                </a>
              </li>
            ))}
          </ul>
        </nav>

        <!-- Legal -->
        <nav>
          <h3 class="text-[10px] font-bold uppercase tracking-widest text-white/40 mb-4">
            {isEn ? 'Legal' : 'Rechtliches'}
          </h3>
          <ul class="space-y-2.5">
            {legalLinks.map((link) => {
              const path = isEn ? link.enPath : link.path;
              const isActive = pathname === path;
              return (
                <li>
                  <a
                    href={path}
                    class={`text-[11px] font-bold uppercase tracking-widest transition-colors ${isActive ? 'text-eos-accent' : 'text-white/60 hover:text-white'}`}
                  >
                    {isEn ? link.en : link.de}
                  </a>
                </li>
              );
            })}
          </ul>
        </nav>
      </div>

      <!-- RIGHT: email signup -->
      <div class="flex flex-col justify-start gap-6">
        <p class="text-sm text-white/70 font-sans text-center">
          {isEn
            ? 'Join the club and benefit from our welcome offers'
            : 'Werde Mitglied und profitiere von unseren Willkommensangeboten'}
        </p>
        <BsportLeadCapture />
        <div class="flex items-center gap-4 mt-2">
          <LangSwitch translationSlug={translationSlug} />
        </div>
      </div>
    </div>
  </div>

  <!-- ── Full-width logo banner: EOS [mark] CLUB ── -->
  <div class="w-full mt-10 px-4 flex items-center justify-center gap-4 md:gap-8 py-8">
    <span class="font-serif text-4xl md:text-6xl lg:text-7xl xl:text-8xl tracking-[0.25em] text-white/90 select-none leading-none">EOS</span>
    <img
      src="/assets/eos-logo-export_bm-white.png"
      alt=""
      aria-hidden="true"
      class="h-14 md:h-20 lg:h-24 xl:h-28 w-auto object-contain opacity-90 flex-shrink-0"
      loading="lazy"
      decoding="async"
    />
    <span class="font-serif text-4xl md:text-6xl lg:text-7xl xl:text-8xl tracking-[0.25em] text-white/90 select-none leading-none">CLUB</span>
  </div>

  <!-- ── Bottom bar ── -->
  <div>
    <div class="max-w-7xl mx-auto px-6 py-4 flex flex-col sm:flex-row items-center justify-between gap-3">
      <p class="text-xs text-white/40">
        © {currentYear} EOS CLUB. {isEn ? 'All rights reserved.' : 'Alle Rechte vorbehalten.'}
      </p>

      <!-- Social icon row -->
      <div class="flex items-center gap-4">
        {socialLinks.map((link) => (
          <a
            href={link.url}
            target={link.url.startsWith('http') ? '_blank' : undefined}
            rel={link.url.startsWith('http') ? 'noopener noreferrer' : undefined}
            aria-label={link.name}
            class="text-white/40 hover:text-white transition-colors"
            set:html={link.icon}
          />
        ))}
      </div>

      <p class="text-xs text-white/40">
        {isEn ? 'Cologne, Germany' : 'Köln, Deutschland'}
      </p>
    </div>
  </div>

</footer>
