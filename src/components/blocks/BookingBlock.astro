---
interface Props {
  enabled: boolean;
  bookingUrl: string;
  label?: string;
}

const { enabled, bookingUrl, label } = Astro.props;
---

{enabled && (
  <section class="py-20 px-4 bg-eos-warm">
    <div class="max-w-4xl mx-auto text-center">
      {label && (
        <h2 class="text-3xl md:text-4xl font-bold text-eos-text mb-8">
          {label}
        </h2>
      )}
      <div class="flex justify-center">
        <a
          href={bookingUrl}
          target="_blank"
          rel="noopener"
          class="inline-block px-10 py-5 bg-eos-accent text-white text-xl font-bold rounded-full hover:scale-105 transition-transform duration-300 shadow-xl"
        >
          Jetzt Buchen
        </a>
      </div>
    </div>
  </section>
)}
