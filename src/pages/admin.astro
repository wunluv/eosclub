<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TinaCMS Admin</title>
  </head>
  <body>
    <!--
      For self-hosted TinaCMS, we use the @tinacms/app package
      to render the admin interface directly in our Astro project.
    -->
    <script>
      import { renderAdmin } from 'tinacms/dist/admin';
      // Load the config - this will be used by the admin UI
      import config from '../../tina/config';

      renderAdmin(config);
    </script>
  </body>
</html>
