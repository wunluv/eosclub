---
import BaseLayout from '../../layouts/BaseLayout.astro';
---
<BaseLayout title="Page not found" seoDescription="The requested page could not be found.">
  <main class="min-h-[70vh] flex items-center justify-center px-4">
    <div class="text-center">
      <h1 class="text-8xl font-serif text-eos-accent mb-4">404</h1>
      <p class="text-2xl text-eos-text mb-8 font-light">Page not found</p>
      <a href="/en" class="inline-block bg-eos-accent text-white px-8 py-4 rounded-full hover:bg-opacity-90 transition-all duration-300 uppercase tracking-widest text-sm font-bold">
        Back to Home
      </a>
    </div>
  </main>
</BaseLayout>
